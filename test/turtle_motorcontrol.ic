/*
   turtle.ic
   basic movement commands:
   forward, backward, right, left, and stop
*/

int LEFT_MOTOR = 1;
int RIGHT_MOTOR = 3;

void forward(float time)
{
    motor(LEFT_MOTOR, 50);
    motor(RIGHT_MOTOR, 50);
    sleep(time);
}

void backward(float time)
{
    motor(LEFT_MOTOR, -50);
    motor(RIGHT_MOTOR, -50);
    sleep(time);
}

void right(float time)
{
    motor(LEFT_MOTOR, 85);
    motor(RIGHT_MOTOR, -85);
    sleep(time);
}

void left(float time)
{
    motor(LEFT_MOTOR, -85);
    motor(RIGHT_MOTOR, 85);
    sleep(time);
}

void stop()
{
    off(LEFT_MOTOR);
    off(RIGHT_MOTOR);
}

void main()
{
    while(!start_button());
    printf("Start!");
    while(1)
      {
        if(stop_button())
          break;
        else{
        forward(2.0);
        
        backward(2.0);
        
        stop();
        
        left(2.0);
        
        stop();
        
        right(2.0);
        
        stop();
            sleep(2.0);
        }
    }
} 
